#!/usr/bin/perl

use strict;
use warnings;
use FindBin;

{
    die unless $ENV{HOME};
    chdir($ENV{HOME});

    my $base = $FindBin::Bin;
    $base =~ s/\.\///;

    make_link($base, $_) for all_files($base);
}

# XXX glob this or such
sub all_files {
    my $base = shift;
    opendir DIR, $base or die;
    my @files;
    while (my $file = readdir(DIR)) {
        next if $file =~ /^(\.|\.\.|\.svn|stconfig-setup)$/;
        push @files, $file;
    }
    return sort @files;
}

sub make_link {
    my $base = shift;
    my $file = shift;
    if (-e $file) {
        warn "    skipping $file, already exists.\n";
        return;
    }
    warn "Linking $file\n";
    symlink("$base/$file", "$ENV{HOME}/$file");
}
