# aliases
alias dir='ls -l'
alias cls='clear'

# exports
export EDITOR=vim
export PAGER=less

# add personal Perl stuff to @INC and $PATH
export PERLLIB=/home/graham/perl/lib/perl5/`perl -MConfig -e 'print $Config{archname}'`:/home/graham/perl/share/perl/`perl -MConfig -e 'print $Config{version}'`
export PATH=/home/graham/perl/bin:$PATH

# password-less SSH key for Github
export GIT_SSH=/home/graham/bin/ssh-github

# colourized prompt
COLOR_BRANCH='\[\033[1;32m\]'
