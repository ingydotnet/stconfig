# Always keep my latest ssh details, so I can source later
env | grep SSH | perl -lne 'chomp; m/^(\w+)=(.+)$/; print qq{export $1="$2"}' > ~/.latest-ssh-rc;

# For ssh keychain
KEYCHAIN=/home/lukec/.keychain/`hostname`-sh
if [ -e $KEYCHAIN ]; then
    source $KEYCHAIN
fi

