!#/bin/bash
set -e

if [ "$1" == "" ]; then
    echo Usage: "$0" DB_DUMP_FILE;
    exit 1;
fi

echo INSTALLING $1 database
sudo id
sudo su -
/etc/init.d/apache-perl stop
/etc/init.d/ceqlotron stop
svc -d /usr/lib/service/*
unset PGUSER
unset PGDATABASE
st-db dropdb -s socialtext
st-db createdb -s socialtext
st-db escalate_privs
psql -U nlw NLW -f /path/to/prod-dump.SQL >/dev/null
st-db revoke_privs
/etc/init.d/apache-perl start
/etc/init.d/ceqlotron start
svc -u /usr/lib/service/*






