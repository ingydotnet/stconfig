if [ "$1" == "" ]; then
    echo USAGE: source one-ldap-test  "TESTCASE"  
else
    export WIKIEMAIL=$HOSTNAME

    USERNAME="devnull3"
    EMAIL="devnull3@socialtext.com"
    PWD="ldapd3v"

    alias tail='tail'
    sudo -u www-data $HOME/stbin/qa/appliance/run-wiki-tests --no-maximize --test-username $USERNAME --test-email $EMAIL --test-password $PWD  --plan-server http://$HOSTNAME  --test-server http://$HOSTNAME  --timeout 60000 --plan-page "$1"   
fi

